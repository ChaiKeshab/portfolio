---
interface Props {
    title?: string | undefined;
    description?: string | undefined;
    keywords?: string | undefined;
    ogImage?: string | undefined;
    canonicalUrl?: string | undefined;
}

const {
    title = "Chai Keshab - Software Engineer & Web Developer Portfolio",
