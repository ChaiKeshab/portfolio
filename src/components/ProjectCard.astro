---
interface Props {
  title: string;
  description: string;
  link: string;
}

const { title, description, link } = Astro.props;
---

<div
  class="project-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow"
>
  <h3 class="text-xl font-semibold mb-3">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  <a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-block text-blue-600 hover:text-blue-800 transition-colors"
  >
    View Project â†’
  </a>
</div>

<style>
  .project-card {
    border: 1px solid #eee;
  }
</style>
